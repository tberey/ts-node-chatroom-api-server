<!-- Client served Login/Register Page. -->

<!DOCTYPE html>
<html>
    <head>
        <!-- Metadata -->
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Login/Register</title>
        <meta name="author" content="Tom B">
        <meta name="description" content="">

        <!-- Styling. -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Pacifico">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lobster">
        <link rel="stylesheet" type="text/css" href="login-styling.css">
    </head>

    <!-- Main document body. -->
    <body>
        <h2 style="font-family:'Pacifico';">Welcome to ChatRoom 1.0</h2>
        <form>
            <h3>Login/Register</h3>
            <div class="container" style="background-color:#00ff557a">   
                    <input type="text" placeholder="Enter your Username to Login or Register" name="username" id="uname" required>
                    <input type="password" placeholder="Enter your Password to Login or Register" name="password" id="pword" required><br>
                    <button type="submit" id="submit-login">Login</button> 
            </div>

            <div class="container" style="background-color:#00ffc831">
                    <input type="password" placeholder="Confirm your Password to Register" name="confPassword" id="conf-pword"><br>
                    <button type="submit" id="submit-register">Register</button>    
            </div>
        </form>
        <div>
            <p id="login-msg"></p>
        </div>
        <script src="http://code.jquery.com/jquery-latest.min.js"></script>
        <script>

            //Global Space
            let username = $('#uname');
            let password = $('#pword');
            let confirmPass = $('#conf-pword');
            let msg = $('#login-msg');
            
            // Font random color assignment, for login screen animations.
            const randomColor = (colors = ['red','blue','green','orange','purple','black','orangered']) => {return colors[Math.floor(Math.random() * colors.length)]};
            setInterval(() => $(document.body).css('color', randomColor()) , 2500);

            // Listen for the register button being clicked, to create a new user in the database.
            $('#submit-register').on('click', () => {

                // Error handling/catching, in that the password and password confirmation entered do not match, so clear fields, prevent register new user, and return msg.
                if (password.val() !== confirmPass.val()) {
                    password.val('');
                    confirmPass.val('');
                    return msg.html('The passwords you entered do not match. Please try again.');
                }
                // POST Request, to register a new user and add it to sql database, and show any resulting server messages.
                console.log(1);
                $.ajax({
                    url:'register',
                    method:'POST',
                    data: {
                        username: username.val(),
                        password: password.val()
                    },
                    success:(response) => msg.html(response),
                    error:(err) => msg.html(err.responseText)
                });
                password.val(''); // Clear input field after capturing value for data sent with POST Request.
                confirmPass.val(''); // Clear input field.
            });

            // Listen for the login button being clicked, to login and redirect.
            $('#submit-login').on('click', () => {
                // POST Request, to login with an existing user and either return a resulting message, or redirect to the chatroom.
                $.ajax({
                    url:'login',
                    method:'POST',
                    data: {
                        username: username.val(),
                        password: password.val()
                    },
                    success:(response) => {
                        msg.html(response);
                        if (response.indexOf('/chat') > -1) window.location.pathname = response;
                    },
                    error:(err) => msg.html(err.responseText)
                });
                // Clear input fields after capturing their values for data sent with POST Request.
                password.val('');
                username.val('');
            });    
        </script>
    </body>
</html>
